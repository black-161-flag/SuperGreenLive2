FROM golang:1.15

RUN apt-get update && \
    apt-get install -y libmagickwand-dev
COPY assets /usr/local/share/liveserver

ADD bin/motion /usr/bin/motion
ADD bin/raspistill /usr/bin/raspistill

RUN go get -u github.com/cosmtrek/air

RUN mkdir /app
WORKDIR /app

EXPOSE 8080

ENTRYPOINT ["/go/bin/air"]
